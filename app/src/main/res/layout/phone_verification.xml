<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <EditText
            android:id="@+id/et_reg_phone"
            style="@style/Reg_EditText"
            android:layout_marginTop="15dp"
            android:hint="请输入手机号码"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_reg_yzm"
            style="@style/Reg_EditText"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码" />

        <TextView
            android:id="@+id/tv_get_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/yanzhengma_bg"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
            android:id="@+id/et_reg_passsword"
            style="@style/Reg_EditText"
            android:inputType="textPassword"
            android:hint="请输入密码"
            />
        <EditText
            android:id="@+id/et_reg_passsword_sure"
            style="@style/Reg_EditText"
            android:inputType="textPassword"
            android:hint="请输入确认密码"
            />1
    </LinearLayout>

