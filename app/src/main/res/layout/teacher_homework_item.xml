<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_homework"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@mipmap/homework"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_homework"
            android:singleLine="true"
            android:text="科目：信号通信" />

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_subject"
            android:layout_below="@+id/tv_subject"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="专业：电子信息工程" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_major"
            android:layout_below="@id/tv_major"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="时间：2018-9-25 16:25" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_major"
            android:layout_below="@id/tv_time"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="内容：第一次实验使用Matalab时间内管理局的方式来关键是放大来看份"
            android:textSize="16sp"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="取消"-->
            <!--android:textColor="#24f"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:textSize="20sp" />-->

    </RelativeLayout>
</android.support.v7.widget.CardView>